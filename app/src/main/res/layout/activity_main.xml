<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.formationandroid.intentslistenerstimers.MainActivity">

	<TextView
		android:id="@+id/texte_decompte"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/main_marge_texte"
		android:gravity="center"
		android:text="@string/main_libelle_creer_decompte"
		android:textColor="@color/couleurMainTexte"
		android:textSize="@dimen/main_taille_texte"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<Button
		android:id="@+id/bouton_envoyer"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@color/couleurMainFondBouton"
		android:text="@string/main_envoyer_decompte"
		android:textColor="@android:color/white"
		android:textSize="@dimen/main_taille_bouton"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
